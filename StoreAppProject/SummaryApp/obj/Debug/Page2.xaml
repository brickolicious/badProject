<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="SummaryApp.Page2"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SummaryApp"
    xmlns:common="using:SummaryApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SummaryApp.ViewModels"
    mc:Ignorable="d">



    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Bands</x:String>
        <vm:GenresVM x:Key="genreInst"></vm:GenresVM>
        
        
        <DataTemplate x:Key="bandsForGenre">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>


    </Page.Resources>



    <Page.TopAppBar>
        <AppBar>
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='1' Content="Genres" Width="140" Height="80"                     />
                <Button x:ConnectionId='2' Content="Line-up" Width="140" Height="80"                      />
            </StackPanel>
        </AppBar>
    </Page.TopAppBar>










    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="294*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.ColumnSpan="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='3' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>



        <ScrollViewer Grid.Row="1" Grid.RowSpan="7" Grid.Column="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListView 
                 ItemsSource="{Binding Source={StaticResource genreInst},Path=GenreList}" 
                DisplayMemberPath="Name"
                 SelectedItem="{Binding Source={StaticResource genreInst},Path=SelectedGenre, Mode=TwoWay}">




            </ListView>
        </ScrollViewer>


        <ListView ItemsSource="{Binding Source={StaticResource genreInst},Path=FilteredBands}" DisplayMemberPath="Name" SelectedItem="{Binding Source={StaticResource genreInst},Path=SelectedBand,Mode=TwoWay}" Grid.Row="1" Grid.Column="2" Grid.RowSpan="7"/>


        <Image Source="{Binding Source={StaticResource genreInst},Path=SelectedBand.Picture,Mode=OneWay}" Grid.Row="2" Grid.Column="3" Grid.RowSpan="4"/>
        <TextBlock Text="{Binding Source={StaticResource genreInst},Path=SelectedBand.Name,Mode=OneWay}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2"/>
        <TextBlock Text="{Binding Source={StaticResource genreInst},Path=SelectedBand.Description,Mode=OneWay}" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock Text="{Binding Source={StaticResource genreInst},Path=SelectedBand.Facebook,Mode=OneWay}" Grid.Row="5" Grid.Column="4"/>
        <TextBlock Text="{Binding Source={StaticResource genreInst},Path=SelectedBand.Twitter,Mode=OneWay}" Grid.Row="5" Grid.Column="5"/>






        <!--<Button Command=""></Button>-->


        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

    </Grid>
</common:LayoutAwarePage>

