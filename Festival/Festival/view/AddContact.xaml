<Window x:Class="BADProject.view.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:context="clr-namespace:BADProject.viewmodel"
        Title="Add Contact" Height="275" Width="280">

    <Window.Resources>
        <Style x:Key="stackStyle" TargetType="{x:Type StackPanel}">

        </Style>
    </Window.Resources>
        
    <Window.DataContext>
        <context:ContactVM></context:ContactVM>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Center">Create contact:</Label>
        <Label Grid.Column="0" Grid.Row="1">Naam:</Label>
        <Label Grid.Column="0" Grid.Row="2">Bedrijf:</Label>
        <Label Grid.Column="0" Grid.Row="3">Functie:</Label>
        <Label Grid.Column="0" Grid.Row="4">Plaats:</Label>
        <Label Grid.Column="0" Grid.Row="5">E-mail:</Label>
        <Label Grid.Column="0" Grid.Row="6">Telefoon:</Label>
        <Label Grid.Column="0" Grid.Row="7">GSM</Label>

        <TextBox x:Name="txtName"  Grid.Column="1" Grid.Row="1" ></TextBox>
        <TextBox x:Name="txtCompany" Grid.Column="1" Grid.Row="2"></TextBox>
        <ComboBox x:Name="cboJobRole" Grid.Column="1" Grid.Row="3" ItemsSource="{Binding ContactList}" DisplayMemberPath="Name">
        </ComboBox>
        <TextBox x:Name="txtPlace" Grid.Column="1" Grid.Row="4"></TextBox>
        <TextBox x:Name="txtEmail" Grid.Column="1" Grid.Row="5"></TextBox>
        <TextBox x:Name="txtPhone" Grid.Column="1" Grid.Row="6"></TextBox>
        <TextBox x:Name="txtGSM" Grid.Column="1" Grid.Row="7"></TextBox>
        
        <Button x:Name="sendBtn" Command="{Binding AddContactComBtn}"  Grid.ColumnSpan="2" Grid.Row="9" Click="sendBtn_Click" >Voeg toe.</Button>
    </Grid>
</Window>
