<Window x:Class="BADProject.view.RemoveStafe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoveStafe" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="1" Content="Select stage to delete:" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding StageList}" ></ComboBox>
        <Button Style="{StaticResource buttonStyle}" Grid.Row="3" Grid.Column="1" Content="Delete stage"></Button>
    </Grid>
</Window>
