<UserControl x:Class="BADProject.view.Lineup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             mc:Ignorable="d" Width="1024" Height="600">

    <!--<UserControl.Resources>
        <com:LineupVM x:Key="lineupVMinst"/>
    </UserControl.Resources>-->

    <Grid Style="{StaticResource gridStyle}" Margin="0,10px,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="371*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>

        <Label Content="Line-up" Grid.Column="0"   HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="21.333"/>
        <ScrollViewer Margin="5" Grid.Row="4" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.ColumnSpan="2">
        


            <StackPanel  x:Name="podiaStackPanel" RenderTransformOrigin="0.5,0.5" Background="White" Orientation="Horizontal" CanHorizontallyScroll="True">


                <ItemsControl ItemsSource="{Binding PodiumCollectie}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>

                        <DataTemplate>


                            <!--<DataGrid Style="{StaticResource dataGridStyle}" ColumnHeaderStyle="{StaticResource dgColHeadStyle}"  x:Name="dg">-->

                            <!--</DataGrid>-->

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>




        </ScrollViewer>
        <Button Command="{Binding AddStageCommand}" Style="{StaticResource buttonStyle}" Content="Voeg podium toe." Margin="10,15,10,6" Grid.Row="2" Grid.Column="1" Height="Auto"/>
        <Button Command="{Binding DeleteDayCommand}" Style="{StaticResource buttonStyle}" Content="Verwijder dag."  Margin="10,14,10,6" Grid.Row="1" Grid.Column="1" Height="Auto"/>
        <Button Command="{Binding AddDayCommand}" Style="{StaticResource buttonStyle}" Content="Voeg dag toe." Grid.Column="1" Margin="10,15,10,6" Height="Auto"/>

        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="1" Grid.Column="0" Grid.RowSpan="2" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"  VerticalContentAlignment="Stretch" >
            <StackPanel x:Name="dagenStackPanel"  Margin="0" Orientation="Horizontal" >
                <ItemsControl ItemsSource="{Binding DatesList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>

                        <DataTemplate>

                            <Button Style="{StaticResource dagButtonStyle}"  Content="{Binding DayOfWeek}" Tag="{Binding Date}"  Command="{Binding DataContext.ShowLineUpCommand,RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding Date}"/>


                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>



            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
