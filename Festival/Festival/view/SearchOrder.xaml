<Window x:Class="BADProject.view.SearchOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:context="clr-namespace:BADProject.viewmodel"
        Title="SearchOrder" Height="300" Width="450">
    <Window.DataContext>
        <context:BezoekersVM/>
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="1*"/>
            <RowDefinition/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.75*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Search order:" Grid.Column="1"/>
        <TextBox Name="txtSearch" Grid.Column="1" Grid.Row="1"/>
        <Button Style="{StaticResource buttonStyle}" Command="{Binding SearchOrderActionCommand}" CommandParameter="{Binding Text, ElementName=txtSearch}" Grid.Row="1" Grid.Column="3" Content="Search name"/>
        <ListView x:Name="lstvwOrder" Grid.Row="3" Grid.RowSpan="5" Grid.ColumnSpan="5" ItemsSource="{Binding SearchList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="OrderID" Width="auto" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="E-mail" Width="auto" DisplayMemberBinding="{Binding Email}" />
                    <GridViewColumn Header="Type" Width="auto" DisplayMemberBinding="{Binding TicketTypeProp.Name}" />
                    <GridViewColumn Header="Amount" Width="auto" DisplayMemberBinding="{Binding Amount}" />
                </GridView>
            </ListView.View>
        </ListView>


        <Button Style="{StaticResource buttonStyle}" Command="{Binding EditCommand}" CommandParameter="{Binding ElementName=lstvwOrder,Path=SelectedItem}" IsEnabled="{Binding SelectedItems.Count, ElementName=lstvwOrder}"  Grid.Row="8" Grid.Column="1">Edit</Button>
    </Grid>
</Window>
