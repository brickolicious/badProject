<Window x:Class="BADProject.view.AddContactType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:context="clr-namespace:BADProject.viewmodel"
        Title="AddContactType" Height="150" Width="300">
    
    
    <Window.DataContext>
        <context:AddContactTypeVM/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        
        
        
        
        <Label Grid.Column="1" HorizontalAlignment="Center" Content="Enter new category:"/>
        <TextBox x:Name="txtType" Text="{Binding Name}" Grid.Column="1" Grid.Row="1"></TextBox>
        <Button Command="{Binding AddTypeCommand}" Style="{StaticResource buttonStyle}" CommandParameter="{Binding ElementName=txtType, Path=Text}" Grid.Column="1" Grid.Row="2" Click="Button_Click" >Add category</Button>
    </Grid>
</Window>
