@model FestivalSite.ViewModels.LineUpVM
@using ClassLibraryModels
@{
   ViewBag.Title = "DetailBand";
}

<div id="bandWrapper">

    
@if(Model.SelectedBand.Picture != null){
    <img src="@Url.Action("GetPhoto", "LineUp", new { id = Model.SelectedBand.ID })" alt="@Model.SelectedBand.Name" />
    }

<div id="bandInfo">
    <h2>@Model.SelectedBand.Name

        

    </h2>
    <p>@Model.SelectedBand.Description</p>
    <h3>Genres:</h3>
    <ul>
        @foreach (Genre genre in Model.SelectedBand.Genres)
        {
            <li>@genre.Name</li> 
        }
       
    </ul>
    
</div>

@if (Model.SelectedDay != null) {

    @Html.ActionLink("Go back", "LineUpForDay", new { date = Model.SelectedDay });
    
    
}else{

    @Html.ActionLink("Go back", "Index")

}
